---
import GithubIcon from '../icons/GithubIcon'
---

<div class='logo-container'>
	<img
		src='/images/serverbee-desktop.png'
		alt='ServerMilkLogo'
		width='100'
		height='100'
	/>
	<div class='logo-container__text'>
		<span class='logo-container__text--title'
			>ServerMilk <a
				href='https://github.com/ZingerLittleBee/ServerMilk'
				target='_blank'
				class='ml-2 hover:opacity-60'
				><GithubIcon width='30px' className='fill-gray-600' />
			</a></span
		>
		<span class='logo-container__text--desc'>ServerBee 服务端桌面程序</span>
	</div>
</div>

<style>
	.logo-container {
		display: flex;
		align-items: center;
		margin: 0 auto;
		padding: 0 0 0 0;
	}

	.logo-container__text {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0 0 0 0.5rem;
	}

	.logo-container__text--title {
		font-size: 1.5rem;
		font-weight: 600;
		margin: 0 0 0 0.5rem;
		display: flex;
		justify-items: center;
		align-items: center;
	}

	.logo-container__text--desc {
		font-size: 1rem;
		color: #999;
		font-weight: 600;
		margin: 0 0 0 0.5rem;
	}
</style>
